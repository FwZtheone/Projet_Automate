<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:text="Login : "/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:text="Email : "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:text="mot de passe : "/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_ecriture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:text="Ecriture : "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_ip"
            android:layout_width="200dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:hint="IP AUTOMATE"/>
        <EditText
            android:id="@+id/edit_text_rack"
            android:layout_width="100dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:hint="RACK"/>
        <EditText
            android:id="@+id/edit_text_slot"
            android:layout_width="100dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="SLOT">

        </EditText>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/button_showAutomate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Connexion_S7"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mybutton"
            android:textColor="#ffff"
            android:onClick="onShowAutomate"
            />

        <Button
            android:id="@+id/button_deco"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="DÃ©connexion session"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mybutton"
            android:textColor="#ffff"
            android:onClick="onDeconnect"
            />

        <TextView
            android:id="@+id/tv_main_plc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0090ff"
            android:text="Refplc"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>





    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/pb_main_progressionS7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:max="255"

        android:visibility="invisible"/>



</LinearLayout>