<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Menu"
        android:textSize="15dp"
        android:textFontWeight="2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:text="Login : "/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_email"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:text="Email : "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_password"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:text="mot de passe : "/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_user_ecriture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:text="Ecriture : "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_ip"
            android:layout_width="200dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="192.168.1.90" />
        <EditText
            android:id="@+id/edit_text_rack"
            android:layout_width="100dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="0"/>
        <EditText
            android:id="@+id/edit_text_slot"
            android:layout_width="100dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="2">

        </EditText>

        <EditText
            android:id="@+id/edit_text_databloc"
            android:layout_width="100dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="5">

        </EditText>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/button_showAutomate"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Connexion_AutomateLiquide"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mybutton"
            android:textColor="#ffff"
            android:onClick="onShowAutomate"
            />

        <Button
            android:id="@+id/button_deco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="DÃ©connexion session"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mybutton"
            android:textColor="#ffff"
            android:onClick="onDeconnect"
            />


        <Button
            android:id="@+id/button_show_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Show user"
            android:background="@drawable/mybutton"
            android:textColor="#ffff"
            android:onClick="onShowUser"
            android:layout_marginLeft="5dp"/>



    </LinearLayout>










</LinearLayout>